@using JsonDotNet.CustomContractResolvers
@model JsonDotNet.CustomContractResolvers.Samples.Website.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "PropertiesContractResolver tester";
}

<h2>@ViewBag.Title</h2>
<p>
    Here you can test the PropertiesContractResolver class.
</p>

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Serialization information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Json)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(m => m.Json)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Properties)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Properties)
                @Html.ValidationMessageFor(m => m.Properties)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ExcludeProperties)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ExcludeProperties)
                @Html.ValidationMessageFor(m => m.ExcludeProperties)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.PropertyMatchMode)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.PropertyMatchMode, new SelectList(Enum.GetValues(typeof(PropertyMatchMode))))
                @Html.ValidationMessageFor(m => m.PropertyMatchMode)
            </div>

            <p>
                <input type="submit" value="Serialize" />
            </p>
        </fieldset>
    </div>
}

@if (Model.JsonSerializationResult != null)
{
    <h2>
        JSON serialization result:
    </h2>
    
    <pre>
        @Model.JsonSerializationResult
    </pre>
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>    
}